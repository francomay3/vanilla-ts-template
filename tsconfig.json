{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "paths": {
      "@components/*": ["src/components/*"],
      "@images/*": ["public/images/*"],
      "@public/*": ["public/*"],
      "@src/*": ["src/*"]
    },
    "skipLibCheck": true,
    "target": "es5"
  },
  "exclude": ["node_modules"]
}
